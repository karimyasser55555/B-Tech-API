@model AdminDashBoard.Models.Product

@{
    ViewData["Title"] = "Create";
}
<div class="row h-100 align-items-center justify-content-center" style="height: 100vh">
    <div class="col-6 ">
        <div class="bg-secondary rounded p-2 p-sm-5 my-2 mx-3">
            <div class="text-center">

                <h3>Update Product</h3>
            </div>

        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameArabic" class="control-label"></label>
                <input asp-for="NameArabic" class="form-control" />
                <span asp-validation-for="NameArabic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailUnit" class="control-label"></label>
                <input asp-for="AvailUnit" class="form-control" />
                <span asp-validation-for="AvailUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionArabic" class="control-label"></label>
                <input asp-for="DescriptionArabic" class="form-control" />
                <span asp-validation-for="DescriptionArabic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@Model.category" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" type="file" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>


        </div>
                    </div>
                </div>
