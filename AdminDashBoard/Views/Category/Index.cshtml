@model IEnumerable<AdminDashBoard.ViewModel.GetAllCategory>


@{
    ViewData["Title"] = "Show All Category Page";
}



                <table class="table bg-secondary rounded-2">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NameArabic)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.ImagePath)
                            </th>
                          
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameArabic)
                                </td>

                                <td>
                                    <img src="@(Convert.ToString(item.ImagePath))">

                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                                    @Html.ActionLink("Details", "Details", new {id=item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>







